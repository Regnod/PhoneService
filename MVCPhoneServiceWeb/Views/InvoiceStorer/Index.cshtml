@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-black">Submit Report</h2>
<br />
@if (!String.IsNullOrEmpty(ViewData["statusMessage"].ToString()))
{
    var statusMessageClass = (ViewData["statusMessage"]).ToString().StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewData["statusMessage"]
    </div>
}
<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite col-5">
        <div class="form-group row">
            @*<div class="col-2"></div>*@
            <div class="col-2">
                <label class="col-form-label">File</label>
            </div>
            <div class="col-8">
                <input type="file" name="path" multiple class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-5">
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-outline-dark" value="Submit" />
                    </div>
                    <div class="col-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}