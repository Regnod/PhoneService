@model Data.Models.SMSPlan
@using MVCPhoneServiceWeb.Utils;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-black">Create Sms Plan</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SMSPlanId" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="SMSPlanId" class="form-control text-center" />
            </div>
            <span asp-validation-for="SMSPlanId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Messages" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Messages" class="form-control text-center" />
            </div>
            <span asp-validation-for="Messages" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cost" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Cost" class="form-control text-center" />
            </div>
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-info" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-all-route-data="@SD.SmsPlans_params" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
