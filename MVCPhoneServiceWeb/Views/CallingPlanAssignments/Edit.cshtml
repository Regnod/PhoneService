@model Data.Models.CallingPlanAssignment
@using MVCPhoneServiceWeb.Utils;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-black">Edit Mobile Phone Calling Plan Assignment</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-6 ">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CallingPlanId" class="custom-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="CallingPlanId" class="form-control text-center" asp-items="ViewBag.CallingPlanId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="PhoneNumber" class="custom-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="PhoneNumber" class="form-control text-center" asp-items="ViewBag.PhoneNumber"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Month" class="custom-label text-center"></label>
            </div>
            <div class="col-8">
                <select asp-for="Month" style="background-color:white;" class="form-control text-center" asp-items="ViewBag.Month"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Year" class="custom-label text-center"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="Year" style="background-color:white;" class="form-control text-center" />
            </div>
        </div>
        <div class="col-4">
        </div>
        <div class="col-8 text-left">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <div class="col-4 ">
                        <a asp-action="Index" asp-all-route-data="@SD.CallingPlanAssignments_params" class="btn btn-success ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}