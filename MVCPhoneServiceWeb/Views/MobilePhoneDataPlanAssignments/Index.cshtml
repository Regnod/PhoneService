@model IEnumerable<Data.Models.MobilePhoneDataPlanAssignment>

@using MVCPhoneServiceWeb.Utils

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-8">
            <h2 class="text-black">
                Mobile Phone Data Plan Assignment
            </h2>
        </div>
        <div class="col-4 text-right">
            @if (User.IsInRole(SD.AdminUser))
            {
                <p>
                    <a asp-action="Create" class="btn btn-outline-dark">
                        <i class="fa fa-plus"></i>
                        &nbsp; Create New
                    </a>
                </p>
            }
        </div>
    </div>
    <br />
    <div class="row">
        <form class="col-12 text-right" asp-controller="TotalCost" asp-action="CostCenterExpenseMobile">
            <div class=" row">
                <div class="col-11">
                    @*<label value="PhoneNumber" class="col-form-label">Phone Number</label>
                        <input type="text" class="rounded" name="PhoneNumber" />

                        <label value="Pin" class="col-form-label">Pin</label>
                        <input type="text" class="rounded" name="Pin" />

                        <label value="Puk" class="col-form-label">Puk</label>
                        <input type="text" class="rounded" name="Puk" />*@
                </div>
                <div class="col-1">
                    @*<input class="btn btn-outline-dark col-form-label" type="submit" value="filter" />*@
                </div>
            </div>
        </form>
    </div>
    <br />

    <table class="table table-striped border">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneLine.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPlan.DataPlanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPlanAssignmentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalDataUsage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternationalDataUsage)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneLine.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataPlan.DataPlanId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataPlanAssignmentDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalDataUsage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InternationalDataUsage)
                </td>
                @if (User.IsInRole(SD.AdminUser))
                {
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a class=" btn btn-info text-white" asp-action="Edit" asp-route-phoneNumber="@item.PhoneNumber" asp-route-dateTime="@item.DataPlanAssignmentDateTime" asp-route-dataPlanId="@item.DataPlanId">
                                <i class="fas fa-edit"></i>
                                @*Edit*@
                            </a>

                            <a class=" btn btn-dark text-white" asp-action="Details" asp-route-phoneNumber="@item.PhoneNumber" asp-route-dateTime="@item.DataPlanAssignmentDateTime" asp-route-dataPlanId="@item.DataPlanId">
                                <i class="fas fa-list"></i>
                                @*Details*@
                            </a>

                            <a class=" btn btn-danger text-white" asp-action="Delete" asp-route-phoneNumber="@item.PhoneNumber" asp-route-dateTime="@item.DataPlanAssignmentDateTime" asp-route-dataPlanId="@item.DataPlanId">
                                <i class="fas fa-trash-alt"></i>
                                @*Delete*@
                            </a>
                        </div>
                    </td>
                }
            </tr>
        }
    </table>
    <div class="row">
        <div class="col-12 text-right">
            <a class=" btn btn-success text-white">
                <i class="fas fa-trash-"></i>
                Export
            </a>
        </div>
    </div>
</div>