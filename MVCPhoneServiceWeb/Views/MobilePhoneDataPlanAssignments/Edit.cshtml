@model Data.Models.MobilePhoneDataPlanAssignment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-black">Edit Mobile Phone Data Plan Assignment</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="PhoneNumber" />
        <input type="hidden" asp-for="DataPlanAssignmentDateTime" />
        <input type="hidden" asp-for="DataPlanId" />*@
        <div class="col-6 ">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DataPlanId" class="custom-label"></label>
                    @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                </div>
                <div class="col-8">
                    @*@Html.DisplayFor(model => model.PhoneNumber)*@
                    <select asp-for="DataPlanId" class="form-control text-center" asp-items="ViewBag.DataPlanId"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="PhoneNumber" class="form-control text-center" asp-items="ViewBag.PhoneNumber"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DataPlanAssignmentDateTime" class="custom-label text-center"></label>
                </div>
                <div class="col-8">
                    @*@Html.DisplayFor(model => model.PUK)*@
                    <input type="text" asp-for="DataPlanAssignmentDateTime" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="NationalDataUsage" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NationalDataUsage" class="form-control text-center" />
                </div>
                <span asp-validation-for="NationalDataUsage" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="InternationalDataUsage" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="InternationalDataUsage" class="form-control text-center" />
                </div>
                <span asp-validation-for="InternationalDataUsage" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
        </div>
        <div class="col-8 text-left">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <div class="col-4 ">
                        <a asp-action="Index" class="btn btn-success ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}