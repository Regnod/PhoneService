@model Data.Models.Employee
@using MVCPhoneServiceWeb.Utils;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-black">Delete Employee</h1>
<h3>Are you sure you want to delete this?</h3>
<br />
<form method="post" asp-action="Delete" enctype="multipart/form-data">

    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <fieldset disabled style="background-color:white;">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EmployeeId" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="EmployeeId" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Name" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Name" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CostCenter" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="CostCenter" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PersonalCode" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="PersonalCode" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
        </div>
        <div class="col-12"></div>
        <div class="col-8">
            <div class="col-8 offset-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-all-route-data="@SD.Employee_params" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>