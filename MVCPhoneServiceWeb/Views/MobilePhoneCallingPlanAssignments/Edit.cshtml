@model Data.Models.MobilePhoneCallingPlanAssignment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-black">Edit Mobile Phone Calling Plan Assignment</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="PhoneNumber" />
        <input type="hidden" asp-for="CallingPlanAssignmentDateTime" />
        <input type="hidden" asp-for="CallingPlanId" />*@
        <div class="col-6 ">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CallingPlanId" class="custom-label"></label>
                    @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                </div>
                <div class="col-8">
                    @*@Html.DisplayFor(model => model.PhoneNumber)*@
                    <select asp-for="CallingPlanId" class="form-control text-center" asp-items="ViewBag.CallingPlanId"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="PhoneNumber" class="form-control text-center" asp-items="ViewBag.PhoneNumber"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CallingPlanAssignmentDateTime" class="custom-label text-center"></label>
                </div>
                <div class="col-8">
                    @*@Html.DisplayFor(model => model.PUK)*@
                    <input type="text" asp-for="CallingPlanAssignmentDateTime" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">

                    <label asp-for="MinutesConsumed" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MinutesConsumed" class="form-control text-center" />
                </div>
                <span asp-validation-for="MinutesConsumed" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4 ">

                    <label asp-for="MessagesSent" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MessagesSent" class="form-control text-center" />
                </div>
                <span asp-validation-for="MessagesSent" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
        </div>
        <div class="col-8 text-left">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <div class="col-4 ">
                        <a asp-action="Index" class="btn btn-success ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}