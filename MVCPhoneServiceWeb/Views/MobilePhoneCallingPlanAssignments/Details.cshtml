@model Data.Models.MobilePhoneCallingPlanAssignment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-black">Details Mobile Calling Plan Assignment</h2>
<br />
<div class="backgroundWhiteBorder row">
    <div class="col-8">
        <fieldset disabled style="background-color:white;">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CallingPlanId" class="custom-label"></label>
                    @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                </div>
                <div class="col-4">
                    @*@Html.DisplayFor(model => model.PhoneNumber)*@
                    <input type="text" asp-for="CallingPlanId" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input type="text" asp-for="PhoneNumber" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CallingPlanAssignmentDateTime" class="custom-label"></label>
                </div>
                <div class="col-4">
                    @*@Html.DisplayFor(model => model.PUK)*@
                    <input type="text" asp-for="CallingPlanAssignmentDateTime" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MinutesConsumed" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input type="text" asp-for="MinutesConsumed" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="MessagesSent" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input type="text" asp-for="MessagesSent" style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
        </fieldset>
    </div>

    <div class="col-12"></div>
    <div class="col-8">
        <div class="col-8 offset-3">
            @*<partial name="_addCartDetailsAndBactkToList" model="Model.Announce.AnnounceID" />*@
                <a class=" btn btn-info text-white" asp-action="Edit" asp-route-phoneNumber="@Model.PhoneNumber" asp-route-dateTime="@Model.CallingPlanAssignmentDateTime" asp-route-callingPlanId="@Model.CallingPlanId">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</div>