@model Data.Models.MobilePhoneCall
@using MVCPhoneServiceWeb.Utils;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-black">Edit Mobile Phone Calls</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="DateTime" />
        <div class="col-5 ">
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="PhoneNumber" readonly style="background-color:white;" class="form-control text-center" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="DateTime" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input type="datetime" asp-for="DateTime" readonly style="background-color:white;" class="form-control text-center" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="Addressee" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Addressee" class="form-control text-center" />
                </div>
                <span asp-validation-for="Addressee" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4 ">

                    <label asp-for="Duration" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Duration" class="form-control text-center" />
                </div>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="TotalCost" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TotalCost" class="form-control text-center" />
                </div>
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
        </div>
        <div class="col-8 text-left">
            <div class="col-8 offset-3">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <div class="col-4 ">
                        <a asp-action="Index" asp-all-route-data="@SD.MobilePhoneCalls_params" class="btn btn-success ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}