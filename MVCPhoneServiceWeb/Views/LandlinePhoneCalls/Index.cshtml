@model IEnumerable<Data.Models.LandlinePhoneCall>
@using MVCPhoneServiceWeb.Utils

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-8">
            <h2 class="text-black">
                Landline Phone Call
            </h2>
        </div>
        <div class="col-4 text-right">
            @if (User.IsInRole(SD.AdminUser))
            {
                <p>
                    <a asp-action="Create" class="btn btn-outline-dark">
                        <i class="fa fa-plus"></i>
                        &nbsp; Create New
                    </a>
                </p>
            }
        </div>
    </div>
    <br />
    <div class="row">
        <form class="col-12 text-right" asp-controller="TotalCost" asp-action="CostCenterExpenseMobile">
            <div class=" row">
                <div class="col-11">
                    @*<label value="PhoneNumber" class="col-form-label">Phone Number</label>
                        <input type="text" class="rounded" name="PhoneNumber" />

                        <label value="Pin" class="col-form-label">Pin</label>
                        <input type="text" class="rounded" name="Pin" />

                        <label value="Puk" class="col-form-label">Puk</label>
                        <input type="text" class="rounded" name="Puk" />*@
                </div>
                <div class="col-1">
                    @*<input class="btn btn-outline-dark col-form-label" type="submit" value="filter" />*@
                </div>
            </div>
        </form>
    </div>
    <br />

    <table class="table table-striped border">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addressee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Extension)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addressee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        @if (User.IsInRole(SD.AdminUser))
        {
            <td style="width:150px">
                <div class="btn-group" role="group">
                    <a class=" btn btn-info text-white" asp-action="Edit" asp-route-extension="@item.Extension" asp-route-dateTime="@item.DateTime" asp-route-employeeId="@item.EmployeeId">
                        <i class="fas fa-edit"></i>
                        @*Edit*@
                    </a>

                    <a class=" btn btn-dark text-white" asp-action="Details" asp-route-extension="@item.Extension" asp-route-dateTime="@item.DateTime" asp-route-employeeId="@item.EmployeeId">
                        <i class="fas fa-list"></i>
                        @*Details*@
                    </a>

                    <a class=" btn btn-danger text-white" asp-action="Delete" asp-route-extension="@item.Extension" asp-route-dateTime="@item.DateTime" asp-route-employeeId="@item.EmployeeId">
                        <i class="fas fa-trash-alt"></i>
                        @*Delete*@
                    </a>
                </div>
            </td>
        }
    </tr>
        }
    </table>
    <div class="row">
        <div class="col-12 text-right">
            <a class=" btn btn-success text-white">
                <i class="fas fa-trash-"></i>
                Export
            </a>
        </div>
    </div>
</div>

