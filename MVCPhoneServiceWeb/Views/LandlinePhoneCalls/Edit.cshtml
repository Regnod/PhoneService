@model Data.Models.LandlinePhoneCall

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-black">Edit Landline PhoneCall</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="Extension" />*@
        @*<input type="hidden" asp-for="LandlinePhoneCallDateTime" />*@
        @*<input type="hidden" asp-for="EmployeeId" />*@
    <div class="col-4 ">
        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="Extension" class="control-label"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="Extension" readonly class="form-control text-center" style="background-color:white;" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="LandlinePhoneCallDateTime" class="control-label"></label>
            </div>
            <div class="col-8">
                <input type="datetime" asp-for="LandlinePhoneCallDateTime" readonly class="form-control text-center" style="background-color:white;" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="EmployeeId" class="control-label"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="EmployeeId" readonly class="form-control text-center" style="background-color:white;" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="LandlinePhoneCallCost" class="control-label"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="LandlinePhoneCallCost" readonly class="form-control text-center" style="background-color:white;" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="Destination" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Destination" class="form-control text-center" />
            </div>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4 ">
                <label asp-for="LandlinePhoneCallDuration" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="LandlinePhoneCallDuration" class="form-control text-center" />
            </div>
            <span asp-validation-for="LandlinePhoneCallDuration" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4 ">

                <label asp-for="LandlinePhoneCallAddressee" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="LandlinePhoneCallAddressee" class="form-control text-center" />
            </div>
            <span asp-validation-for="LandlinePhoneCallAddressee" class="text-danger"></span>
        </div>
    </div>
        <div class="col-4">
        </div>
        <div class="col-8 text-left">
            <div class="col-8 offset-2">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <div class="col-4 ">
                        <a asp-action="Index" class="btn btn-success ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


