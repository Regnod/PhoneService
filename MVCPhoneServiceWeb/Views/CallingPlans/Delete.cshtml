@model Data.Models.CallingPlan
@using MVCPhoneServiceWeb.Utils;

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-black">Delete Calling Plan</h1>
<h3>Are you sure you want to delete this?</h3>
<br/>
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" asp-for="CallingPlanId" />
    <input type="hidden" asp-for="Minutes" />
    <input type="hidden" asp-for="Cost" />
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <fieldset disabled style="background-color:white;">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CallingPlanId" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="CallingPlanId" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Minutes" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Minutes" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Cost" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Cost" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
        </div>
        <div class="col-12"></div>
        <div class="col-8">
            <div class="col-8 offset-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-all-route-data="@SD.CallingPlans_params" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>