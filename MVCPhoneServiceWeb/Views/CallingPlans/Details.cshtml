@model Data.Models.CallingPlan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-black">Details Calling Plan</h2>
<br />
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <fieldset disabled style="background-color:white;">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CallingPlanId" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="CallingPlanId" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Minutes" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Minutes" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Cost" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Cost" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="col-12"></div>
        <div class="col-8">
            <div class="col-8 offset-3">
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@Model.CallingPlanId">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>