@model Data.Models.GPRS

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-black">Create GPRS</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-3">
                <select asp-for="PhoneNumber" class="form-control text-center" asp-items="ViewBag.PhoneNumber"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DateTime" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="DateTime" class="form-control text-center" />
            </div>
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Location" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Location" class="form-control text-center" />
            </div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="APN" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="APN" class="form-control text-center" />
            </div>
            <span asp-validation-for="APN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Volume" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Volume" class="form-control text-center" />
            </div>
            <span asp-validation-for="Volume" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="VolFact" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="VolFact" class="form-control text-center" />
            </div>
            <span asp-validation-for="VolFact" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Amount" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Amount" class="form-control text-center" />
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Discount" class="form-control text-center" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Charge" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Charge" class="form-control text-center" />
            </div>
            <span asp-validation-for="Charge" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Total" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Total" class="form-control text-center" />
            </div>
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Roaming" /> @Html.DisplayNameFor(model => model.Roaming)
            </label>
        </div>
        @* cambio *@
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-info" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
