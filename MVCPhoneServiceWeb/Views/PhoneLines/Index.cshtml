@model IEnumerable<Data.Models.PhoneLine>
@using MVCPhoneServiceWeb.Utils
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-black">
                Phone Lines
            </h2>
        </div>
        <div class="col-6 text-right">
            @if (User.IsInRole(SD.AdminUser))
            {
                <p>
                    <a asp-action="Create" class="btn btn-outline-dark">
                        <i class="fa fa-plus"></i>
                        &nbsp; Create New
                    </a>
                </p>
            }
        </div>
    </div>
    <br />
    <br />

    <form method="post" asp-action="Index" enctype="multipart/form-data">
        @{
            Tuple<bool, string>[] show = (Tuple<bool, string>[])ViewData["columns"];
        }
        <input type="hidden" name="cpage" value="@ViewData["page"]" />
        <a class="btn btn-outline-dark dropdown-toggle" href="#" id="navbarDropDownMenuLink2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Columns
        </a>
        <div id="checklist" class="dropdown-menu" aria-labelledby="navbarDropDownMenuLink">
            @if (show[0].Item1)
            {
                <li class="border-0 dropdown-item"><input type="checkbox" checked name="phoneNumberCheck" />  @Html.DisplayNameFor(model => model.PhoneNumber)</li>
            }
            else
            {
                <li class="border-0 dropdown-item"><input type="checkbox" name="phoneNumberCheck" />  @Html.DisplayNameFor(model => model.PhoneNumber)</li>
            }
            @if (show[1].Item1)
            {
                <li class="border-0 dropdown-item"><input type="checkbox" checked name="pUKCheck" />  @Html.DisplayNameFor(model => model.PUK)</li>
            }
            else
            {
                <li class="border-0 dropdown-item"><input type="checkbox" name="pUKCheck" />  @Html.DisplayNameFor(model => model.PUK)</li>
            }
            @if (show[2].Item1)
            {
                <li class="border-0 dropdown-item"><input type="checkbox" checked name="pINCheck" />  @Html.DisplayNameFor(model => model.PIN) </li>
            }
            else
            {
                <li class="border-0 dropdown-item"><input type="checkbox" name="pINCheck" />  @Html.DisplayNameFor(model => model.PIN) </li>
            }
        </div>
        <input class="btn btn-outline-dark col-form-label" type="submit" value="filter" />
        <br />
        <br />
        <table class="table table-striped border text-center">
            <tr>
                @if (show[0].Item1)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                }
                @if (show[1].Item1)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.PUK)
                    </th>
                }
                @if (show[2].Item1)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.PIN)
                    </th>
                }
                @if (show[0].Item1 || show[1].Item1 || show[2].Item1)
                {
                    <th></th>
                }
            </tr>
            <tr>
                @if (show[0].Item1)
                {
                    if (show[0].Item2 != null)
                    {
                        <th>
                            <input class="border rounded form-control" value="@show[0].Item2" name="phoneNumber" />
                        </th>
                    }
                    else
                    {
                        <th>
                            <input class="border rounded form-control" name="phoneNumber" />
                        </th>
                    }
                }
                @if (show[1].Item1)
                {
                    if (show[1].Item2 != null)
                    {
                        <th>
                            <input class="border rounded form-control" value="@show[1].Item2" name="pUK" />
                        </th>
                    }
                    else
                    {
                        <th>
                            <input class="border rounded form-control" name="pUK" />
                        </th>
                    }
                }
                @if (show[2].Item1)
                {
                    if (show[2].Item2 != null)
                    {
                        <th>
                            <input class="border rounded form-control" value="@show[2].Item2" name="pIN" />
                        </th>
                    }
                    else
                    {
                        <th>
                            <input class="border rounded form-control" name="pIN" />
                        </th>
                    }
                }
                @if (show[0].Item1 || show[1].Item1 || show[2].Item1)
                {
                    <th></th>
                }
            </tr>
            @foreach (var item in Model)
            {


                <tr>
                    @if (show[0].Item1)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                    }
                    @if (show[1].Item1)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.PUK)
                        </td>
                    }
                    @if (show[2].Item1)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.PIN)
                        </td>
                    }
                    @if (User.IsInRole(SD.AdminUser) && (show[0].Item1 || show[1].Item1 || show[2].Item1))
                    {
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class=" btn btn-info text-white" asp-action="Edit" asp-route-id="@item.PhoneNumber">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class=" btn btn-dark text-white" asp-action="Details" asp-route-id="@item.PhoneNumber">
                                    <i class="fas fa-list"></i>
                                </a>

                                <a class=" btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.PhoneNumber">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </table>
        <div class="row">
            <nav aria-label="Page navigation example">
                Page @((int)ViewData["page"] + 1)
                <ul class="pagination">
                    <li class="page-item">
                        <input class="btn btn-outline-dark col-form-label" type="submit" value="Previous" name="previous" />
                    </li>
                    @for (int i = (20 * (int)ViewData["mult"]) + 1; i <= ((int)ViewData["mult"] * 20 + (int)ViewData["top"]); i++)
                    {
                        <li class="page-item">
                            <input class="btn btn-outline-dark col-form-label" type="submit" value="@i" name="page" />
                        </li>
                    }
                    <li class="page-item">
                        <input class="btn btn-outline-dark col-form-label" type="submit" value="Next" name="next" />
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 text-right">
                <a class=" btn btn-success text-white" asp-action="Export" asp-route-page="cpage" asp-route-phoneNumberCheck="@show[0].Item1" asp-route-pUKCheck="@show[1].Item1"
                   asp-route-pINCheck="@show[2].Item1" asp-route-contractCheck="@show[3].Item1" asp-route-phoneNumber="@show[0].Item2" asp-route-pUK="@show[1].Item2" asp-route-pIN="@show[2].Item2"
                   asp-route-contract="@show[3].Item2">
                    <i class="fas fa-trash-"></i>
                    Export
                </a>
            </div>
        </div>
    </form>
</div>