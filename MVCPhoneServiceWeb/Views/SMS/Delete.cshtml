<h1 class="text-black">Delete Message</h1>
<h3>Are you sure you want to delete this?</h3>
<br />
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="DateTime" />
    <input type="hidden" asp-for="E_R" />
    <input type="hidden" asp-for="Total" />
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="Destination" />
    <input type="hidden" asp-for="Location" />
    <input type="hidden" asp-for="Roaming" />
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <fieldset disabled style="background-color:white;">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PhoneNumber" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="PhoneNumber" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="DateTime" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="DateTime" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="E_R" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="E_R" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Total" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Total" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Location" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Location" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Destination" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Destination" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Roaming" class="custom-label"></label>
                    </div>
                    <div class="col-4">
                        <input type="checkbox" asp-for="Roaming" style="background-color:white;" class="form-control text-center" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
        </div>
        <div class="col-12"></div>
        <div class="col-8">
            <div class="col-8 offset-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-all-route-data="@SD.Sms_params" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>

