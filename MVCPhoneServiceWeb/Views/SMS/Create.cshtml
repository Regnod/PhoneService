@model Data.Models.SMS
@using MVCPhoneServiceWeb.Utils;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-black">Create Message</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-3">
                <select asp-for="PhoneNumber" class="form-control text-center" asp-items="ViewBag.PhoneNumber"></select>
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DateTime" class="control-label"></label>
            </div>
            <div class="col-3">
                <input type="datetime" asp-for="DateTime" class="form-control text-center" />
            </div>
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="E_R" class="control-label"></label>
            </div>
            <div class="col-3">
                <select asp-for="E_R" class="form-control text-center" asp-items="ViewBag.E_R"></select>
            </div>
            <span asp-validation-for="E_R" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Total" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Total" class="form-control" />
            </div>
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Location" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Location" class="form-control" />
            </div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Destination" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Destination" class="form-control" />
            </div>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Roaming" class="control-label"></label>
            </div>
            <div class="col-3">
                <input type="checkbox" asp-for="Roaming" class="form-control" />
            </div>
            <span asp-validation-for="Roaming" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-info" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-all-route-data="@SD.Sms_params" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

